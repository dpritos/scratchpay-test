{
  "name": "scratchpay-test",
  "version": "1.0.0",
  "description": "Scratchpay test",
  "main": "./dist/app.js",
  "scripts": {
    "start": "if-env NODE_ENV=local && npm run start:dev || npm run start:prod",
    "start:prod": "node ./dist/app.js",
    "start:dev": "tsc-watch --onSuccess \"npm run start:prod\" ",
    "build": "./node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "lint": "npx eslint src --ext .ts",
    "lint:fix": "npx eslint src --ext .ts --fix",
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha --exit -t 15000 -r ts-node/register test/*.ts"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "if-env": "^1.0.4",
    "joi": "^17.4.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.9.3",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "ts-node": "^9.0.0",
    "tsc-watch": "^1.1.39",
    "typescript": "^4.9.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "text-summary"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50
  }
}
